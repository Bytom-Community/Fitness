        <package name="com.pangzi.btmfitness.entity"></package>
    </typeAliases>
    <plugins>
        <plugin interceptor="com.github.pagehelper.PageHelper">
            <!--<property name="dialect" value="mysql"/>-->
        </plugin>
    </plugins>
</configuration>